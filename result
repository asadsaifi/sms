<script>

var rollField = document.getElementById("roll");
var nameField = document.getElementById("name");
rollField.value = "Please enter your Roll No";
nameField.value = "Please enter your name";

rollField.onfocus = function() {
	if ( rollField.value == "Please enter your Roll No") {
		rollField.value = "";
	}
};

rollField.onblur = function() {
	if ( rollField.value == "") {
		rollField.value = "Please enter your Roll No";
	}
};
nameField.onfocus = function() {
	if ( nameField.value == "Please enter your name") {
		nameField.value = "";
	}
};

nameField.onblur = function() {
	if ( nameField.value == "") {
		nameField.value = "Please enter your name";
	}
};

	</script>












